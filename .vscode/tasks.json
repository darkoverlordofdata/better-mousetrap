{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "valac",
    "isShellCommand": true,
    "args": [
        "--cc=clang",
        "--disable-warnings",
        "--vapidir","./vapis",
        "--pkg",    "glib-2.0",
        "--pkg",    "gio-2.0",
        "--pkg",    "gee-0.8",
        "--pkg",    "sdl2", 
        "--pkg",    "SDL2_image",
        "--pkg",    "SDL2_mixer",
        "--pkg",    "SDL2_ttf",
        "-X",       "-Ofast",
        "-X",       "-w",
        "-X",       "-lm",
        "-o",       "bin/test",
        "src/resources.c",
        "src/entities.gs",
        "src/components.vala",
        "src/systems.gs",
        "src/game.gs",
        "src/main.gs"
    ],
    "showOutput": "always"
}